// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  name             String?
  email            String       @unique
  role             Role         @default(STUDENT)
  projects         Project[]    @relation("ProjectMembers")
  feedbackSent     Feedback[]   @relation("SentFeedback")
  feedbackReceived Feedback[]   @relation("ReceivedFeedback")
  engagementLogs   Engagement[]
  createdAt        DateTime     @default(now())
}

enum Role {
  STUDENT
  MENTOR
  ADMIN
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  members     User[]   @relation("ProjectMembers")
  tasks       Task[]
  createdAt   DateTime @default(now())
}

model Task {
  id          String   @id @default(cuid())
  title       String
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  updatedAt   DateTime @updatedAt
}

model Feedback {
  id         String   @id @default(cuid())
  rating     Int      // Scale 1-5
  comment    String
  senderId   String
  sender     User     @relation("SentFeedback", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("ReceivedFeedback", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())
}

model Engagement {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String   // e.g., "TASK_COMPLETED", "DAILY_LOG_IN"
  timestamp DateTime @default(now())
}