generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  name             String?
  email            String       @unique
  password         String       // Hashed password using bcrypt
  role             Role         @default(STUDENT)
  projects         Project[]    @relation("ProjectMembers")
  feedbackSent     Feedback[]   @relation("SentFeedback")
  feedbackReceived Feedback[]   @relation("ReceivedFeedback")
  engagementLogs   Engagement[]
  assignedTasks    Task[]       @relation("AssignedTasks")
  createdTasks     Task[]       @relation("CreatedTasks")
  healthStatus     HealthStatus?
  mentorId         String?
  mentor           User?        @relation("MentorStudents", fields: [mentorId], references: [id])
  students         User[]       @relation("MentorStudents")
  projectId        String?
  project          Project?     @relation("ProjectMembers", fields: [projectId], references: [id])
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

enum Role {
  STUDENT
  MENTOR
  ADMIN
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  
  members     User[]   @relation("ProjectMembers")
  tasks       Task[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

